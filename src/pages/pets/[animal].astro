  "@context": "https://schema.org",
  "@type": "Article",
  "headline": `${pet.name} Care Guide`,
  "description": pet.description,
  "author": {
    "@type": "Organization",
    "name": "Exotic Pet Atlas"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Exotic Pet Atlas",
    "logo": {
      "@type": "ImageObject",
      "url": "https://exoticpetatlas.com/logo.png"
    }
  },
  "datePublished": "2026-01-18",
  "dateModified": "2026-01-18"
};
---

<BaseLayout 
  title={pet.name} 
  description={`Complete care guide for ${pet.name} (${pet.scientificName}). Learn about habitat, diet, health, legal considerations, and common mistakes. ${pet.difficulty} difficulty level.`}
  keywords={keywords}
  ogType="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(petSchema)} />
  
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumbs -->
    <nav aria-label="Breadcrumb" class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-gray-900">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/pets/" class="hover:text-gray-900">Pets</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-800 font-medium">{pet.name}</li>
      </ol>
    </nav>
    <a href="/pets/" class="inline-flex items-center text-gray-600 hover:text-gray-800 mb-6">
      ‚Üê Back to All Pets
    </a>

    <div class="bg-white rounded-3xl shadow-xl p-8 mb-8">
      <div class="flex items-center gap-6 mb-6">
        <div class="text-8xl">{pet.emoji}</div>
        <div>
          <h1 class="text-4xl font-bold text-gray-800 mb-2">{pet.name}</h1>
          <p class="text-xl text-gray-600 italic">{pet.scientificName}</p>
        </div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-pastel-green rounded-xl p-4">
          <div class="text-sm text-gray-600 mb-1">Lifespan</div>
          <div class="font-bold text-gray-800">{pet.lifespan}</div>
        </div>
        <div class="bg-pastel-pink rounded-xl p-4">
          <div class="text-sm text-gray-600 mb-1">Size</div>
          <div class="font-bold text-gray-800">{pet.size}</div>
        </div>
        <div class="bg-pastel-blue rounded-xl p-4">
          <div class="text-sm text-gray-600 mb-1">Care Level</div>
          <div class="font-bold text-gray-800">{pet.difficulty}</div>
        </div>
        <div class="bg-pastel-purple rounded-xl p-4">
          <div class="text-sm text-gray-600 mb-1">Type</div>
          <div class="font-bold text-gray-800">Exotic Pet</div>
        </div>
      </div>

      <p class="text-lg text-gray-700 leading-relaxed">{pet.description}</p>
    </div>

    <div class="space-y-6">
      {/* Habitat Section */}
      {pet.habitat && (
        <section class="bg-pastel-green rounded-2xl p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">üè† {pet.habitat.title}</h2>
          <ul class="list-disc list-inside text-gray-700 space-y-2 mb-4">
            {pet.habitat.requirements.map((req: string) => (
              <li>{req}</li>
            ))}
          </ul>
          <div class="bg-white rounded-xl p-4 mt-4">
            <p class="text-sm text-gray-700"><strong>üí° Pro Tip:</strong> {pet.habitat.tips}</p>
          </div>
        </section>
      )}

      {/* Diet Section */}
      {pet.diet && (
        <section class="bg-pastel-pink rounded-2xl p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">üçΩÔ∏è {pet.diet.title}</h2>
          <h3 class="font-bold text-gray-800 mb-2">Recommended Foods:</h3>
          <ul class="list-disc list-inside text-gray-700 space-y-1 mb-4">
            {pet.diet.foods.map((food: string) => (
              <li>{food}</li>
            ))}
          </ul>
          <div class="bg-white rounded-xl p-4 mb-3">
            <h4 class="font-bold text-gray-800 mb-1">Feeding Schedule:</h4>
            <p class="text-sm text-gray-700">{pet.diet.schedule}</p>
          </div>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <p class="text-sm text-gray-700"><strong>‚ö†Ô∏è Avoid:</strong> {pet.diet.avoid}</p>
          </div>
        </section>
      )}

      {/* Health Section */}
      {pet.health && (
        <section class="bg-pastel-blue rounded-2xl p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">‚öïÔ∏è {pet.health.title}</h2>
          <ul class="list-disc list-inside text-gray-700 space-y-2 mb-4">
            {pet.health.tips.map((tip: string) => (
              <li>{tip}</li>
            ))}
          </ul>
          {pet.health.warning && (
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-4">
              <p class="text-sm text-gray-700"><strong>‚ö†Ô∏è Important Warning:</strong> {pet.health.warning}</p>
            </div>
          )}
          <a href="/vets/" class="inline-block mt-4 text-blue-600 hover:underline font-semibold">
            Find an exotic animal vet ‚Üí
          </a>
        </section>
      )}

      {/* Legal Section */}
      {pet.legal && (
        <section class="bg-pastel-purple rounded-2xl p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">‚öñÔ∏è {pet.legal.title}</h2>
          <div class="bg-white rounded-xl p-4 mb-4">
            <p class="font-bold text-gray-800 mb-2">Status: <span class={pet.legal.status.includes('ILLEGAL') ? 'text-red-600' : 'text-green-600'}>{pet.legal.status}</span></p>
          </div>
          <ul class="space-y-2 text-gray-700 mb-4">
            {pet.legal.restrictions.map((restriction: string) => (
              <li class="bg-white rounded-lg p-3">{restriction}</li>
            ))}
          </ul>
          <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
            <p class="text-sm text-gray-700"><strong>üìå Advice:</strong> {pet.legal.advice}</p>
          </div>
          <a href="/laws/" class="inline-block mt-4 text-blue-600 hover:underline font-semibold">
            Check state laws ‚Üí
          </a>
        </section>
      )}

      {/* Beginner Mistakes Section */}
      {pet.mistakes && (
        <section class="bg-red-50 rounded-2xl p-6 border-2 border-red-200">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">‚ö†Ô∏è {pet.mistakes.title}</h2>
          <ul class="space-y-2 text-gray-700 mb-4">
            {pet.mistakes.errors.map((error: string) => (
              <li class="bg-white rounded-lg p-3">{error}</li>
            ))}
          </ul>
          <div class="bg-green-50 border-l-4 border-green-400 p-4">
            <p class="text-sm text-gray-700"><strong>‚úÖ Our Advice:</strong> {pet.mistakes.advice}</p>
          </div>
        </section>
      )}

      {/* Additional Resources */}
      <section class="bg-white rounded-2xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">üìö Additional Resources</h2>
        <div class="space-y-3">
          <a href="/setups/" class="block text-gray-700 hover:text-gray-900">
            <span class="font-semibold">‚Üí</span> Browse habitat setup guides
          </a>
          <a href="/breeders/" class="block text-gray-700 hover:text-gray-900">
            <span class="font-semibold">‚Üí</span> Find reputable breeders
          </a>
          <a href="/vets/" class="block text-gray-700 hover:text-gray-900">
            <span class="font-semibold">‚Üí</span> Find exotic animal veterinarians in your area
          </a>
          <a href="/contact/" class="block text-gray-700 hover:text-gray-900">
            <span class="font-semibold">‚Üí</span> Have questions? Contact us
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
