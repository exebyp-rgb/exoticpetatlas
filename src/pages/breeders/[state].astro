---
import BaseLayout from '../../layouts/BaseLayout.astro';

export function getStaticPaths() {
  return [
    { params: { state: 'new-jersey' } },
    { params: { state: 'california' } },
    { params: { state: 'texas' } },
    { params: { state: 'florida' } },
    { params: { state: 'new-york' } },
    { params: { state: 'pennsylvania' } },
    { params: { state: 'illinois' } },
    { params: { state: 'ohio' } },
    { params: { state: 'georgia' } },
    { params: { state: 'north-carolina' } },
    { params: { state: 'michigan' } },
    { params: { state: 'arizona' } },
  ];
}

