    breederCount: '50+',
    description: 'California has one of the largest exotic pet breeding communities in the US, with strict regulations ensuring quality.',
  },
  'texas': {
    name: 'Texas',
    abbreviation: 'TX',
    breederCount: '40+',
    description: 'Texas offers extensive exotic breeding operations, particularly for reptiles and exotic birds.',
  },
  'florida': {
    name: 'Florida',
    abbreviation: 'FL',
    breederCount: '60+',
    description: 'Florida has a thriving exotic breeding industry, with many breeders specializing in reptiles and tropical birds.',
  },
  'new-york': {
    name: 'New York',
    abbreviation: 'NY',
    breederCount: '25+',
    description: 'New York has quality exotic pet breeders, particularly in upstate regions and around NYC.',
  },
  'pennsylvania': {
    name: 'Pennsylvania',
    abbreviation: 'PA',
    breederCount: '30+',
    description: 'Pennsylvania has well-established breeding programs for various exotic species.',
  },
  'illinois': {
    name: 'Illinois',
    abbreviation: 'IL',
    breederCount: '20+',
    description: 'Illinois breeders focus on responsible breeding practices for exotic mammals and reptiles.',
  },
  'ohio': {
    name: 'Ohio',
    abbreviation: 'OH',
    breederCount: '18+',
    description: 'Ohio has experienced breeders specializing in various exotic species.',
  },
  'georgia': {
    name: 'Georgia',
    abbreviation: 'GA',
    breederCount: '25+',
    description: 'Georgia offers diverse exotic breeding options, particularly for reptiles and birds.',
  },
  'north-carolina': {
    name: 'North Carolina',
    abbreviation: 'NC',
    breederCount: '20+',
    description: 'North Carolina has growing exotic breeding community with focus on ethical practices.',
  },
  'michigan': {
    name: 'Michigan',
    abbreviation: 'MI',
    breederCount: '15+',
    description: 'Michigan breeders provide quality exotic pets with emphasis on health and socialization.',
  },
  'arizona': {
