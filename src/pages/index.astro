---
import SEOLayout from '../layouts/SEOLayout.astro';
import StructuredData from '../components/StructuredData.astro';

const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'ExoticPetAtlas',
  url: 'https://exoticpetatlas.com',
};
---

<SEOLayout
  title="ExoticPetAtlas"
  description="USA exotic pet atlas & care guides - comprehensive information about exotic pets, their care, and state-specific regulations."
>
  <StructuredData data={organizationSchema} />
  
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4">Exotic Peta Atlas</h1>
    <p class="text-lg">Welcome to Exotic Peta Atlas - USA exotic pet atlas & care guides.</p>
  </main>
</SEOLayout>
