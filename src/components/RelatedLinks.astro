---
interface RelatedLink {
  title: string;
  href: string;
  description: string;
  emoji?: string;
}

interface Props {
  title?: string;
  links: RelatedLink[];
  variant?: 'default' | 'compact';
}

const { title = "Related Content", links, variant = "default" } = Astro.props;
---

<section class={variant === 'compact' ? 'bg-pastel-beige rounded-xl p-4' : 'bg-pastel-beige rounded-2xl p-6'}>
  <h3 class={variant === 'compact' ? 'text-lg font-bold text-gray-800 mb-3' : 'text-2xl font-bold text-gray-800 mb-4'}>
    {title}
  </h3>
  <div class="space-y-3">
    {links.map(link => (
      <a 
        href={link.href} 
        class="block p-3 bg-white rounded-lg hover:shadow-md transition-all hover:scale-[1.02]"
      >
        <div class="flex items-start">
          {link.emoji && (
            <span class="text-2xl mr-3">{link.emoji}</span>
          )}
          <div class="flex-1">
            <h4 class="font-semibold text-gray-800 hover:text-gray-900">
              {link.title} â†’
            </h4>
            <p class="text-sm text-gray-600 mt-1">{link.description}</p>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
