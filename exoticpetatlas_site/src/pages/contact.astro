---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us">
  <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
  <p class="mb-4">Have questions, corrections, or recommendations? We'd love to hear from you. Fill out the form below or send us an email at <a href="mailto:info@exoticpetatlas.com" class="text-primary font-bold">info@exoticpetatlas.com</a>.</p>
  <form action="https://example.com/form" method="POST" class="space-y-4">
    <div>
      <label for="name" class="block text-sm font-medium mb-1">Name</label>
      <input type="text" id="name" name="name" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label for="email" class="block text-sm font-medium mb-1">Email</label>
      <input type="email" id="email" name="email" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label for="message" class="block text-sm font-medium mb-1">Message</label>
      <textarea id="message" name="message" rows="5" class="w-full border rounded px-3 py-2" required></textarea>
    </div>
    <button type="submit" class="bg-primary text-white font-bold px-4 py-2 rounded">Send</button>
  </form>
</BaseLayout>