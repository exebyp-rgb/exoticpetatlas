---
import BaseLayout from '../../layouts/BaseLayout.astro';
const states = ['New Jersey','New York','Florida','California'];
---

<BaseLayout title="Breeders & Rescues">
  <h2 class="text-3xl font-bold mb-4">Breeders & Rescues</h2>
  <p class="mb-6">Connect with ethical breeders and rescue organizations. Start by selecting your state.</p>
  <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {states.map(state => (
      <li><a href={`/breeders/${state.toLowerCase().replace(/\s+/g,'-')}`} class="text-primary font-bold hover:underline">{state}</a></li>
    ))}
  </ul>
</BaseLayout>